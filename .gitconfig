[push]
    default = simple

[core]
    excludesfile = /home/cedricmessiant/.gitignore

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[alias]
    st = status
    ci = commit
    amend = commit --amend
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    pr = pull --rebase

